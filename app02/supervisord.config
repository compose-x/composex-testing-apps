[unix_http_server]
file=/app/supervisor.sock

[supervisord]
logfile=/app/supervisord.log
logfile_maxbytes=10MB
logfile_backups=10
loglevel=info
pidfile=/app/supervisord.pid
nodaemon=true
minfds=1024
minprocs=200

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[program:app]
process_name=%(program_name)s_%(process_num)02d
numprocs=1
#command=gunicorn app:APP -b :500%(process_num)s -w 2 -p /app/app%(process_num)s.pid
command=python start_app.py
enviroment=
    LOGLEVEL=%(ENV_LOGLEVEL)s
directory=%(here)s

autostart=true
autorestart=true

priority=991
stopsignal=KILL

stdout_syslog=false
stderr_syslog=false

stdout_logfile=/dev/fd/2
stdout_logfile_maxbytes=0

stderr_logfile=/dev/fd/1
stderr_logfile_maxbytes=0

[supervisorctl]
serverurl=unix:///app/supervisor.sock
